{
  "name": "crowdin-app-template",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "npm run build && wrangler dev --port ${PORT:-3000}",
    "build": "rm -rf build && mkdir -p build/assets/static && mkdir -p build/assets && cp -r node_modules/@crowdin/app-project-module/out/static/* build/assets/static/ && cp -r public/* build/assets/",
    "lint": "eslint worker --ext .ts,.tsx --format json",
    "deploy": "npm run build && wrangler deploy",
    "preview": "npm run build && wrangler dev",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@crowdin/app-project-module": "next"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.1"
  }
}
