{
  "name": "crowdin-app-template",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
	"scripts": {
		"dev": "bun run build && concurrently \"bun run watch:assets\" \"wrangler dev --port ${PORT:-3000} --ip 0.0.0.0\"",
		"watch:assets": "nodemon",
		"build": "bun run build:assets",
		"build:assets": "mkdir -p dist/client/static && cp -r node_modules/@crowdin/app-project-module/out/static/* dist/client/static/ && cp -r public/* dist/client/",
		"lint": "eslint worker --ext .ts,.tsx --format json",
		"deploy": "bun run build && wrangler deploy",
		"preview": "bun run build && wrangler dev --ip 0.0.0.0",
		"cf-typegen": "wrangler types --include-runtime false --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
  "dependencies": {
    "@crowdin/app-project-module": "next"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251117.0",
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.1"
  }
}
